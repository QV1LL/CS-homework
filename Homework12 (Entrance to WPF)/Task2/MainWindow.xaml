<Window
    x:Class="Task2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-x:Namespace:Task2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Calculator"
    Width="300"
    Height="300"
    MinWidth="300"
    MinHeight="400"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Padding" Value="5" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            x:Name="CurrentExpressionTextBlock"
            Grid.Row="0"
            Padding="5"
            HorizontalAlignment="Right"
            FontSize="14"
            FontWeight="Light"
            Text="Here will be displayed current expression" />

        <TextBlock
            x:Name="CurrentNumberTextBlock"
            Grid.Row="1"
            Padding="5"
            HorizontalAlignment="Right"
            FontSize="20"
            FontWeight="Bold"
            Text="Here will current input" />

        <Grid x:Name="ControlButtonsGrid" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button
                x:Name="CEButton"
                Grid.Row="0"
                Grid.Column="0"
                Click="CEButton_Click"
                Content="CE"
                Style="{StaticResource ControlButtonStyle}" />
            <Button
                x:Name="CButton"
                Grid.Row="0"
                Grid.Column="1"
                Click="CButton_Click"
                Content="C"
                Style="{StaticResource ControlButtonStyle}" />
            <Button
                x:Name="BackspaceButton"
                Grid.Row="0"
                Grid.Column="2"
                Click="BackspaceButton_Click"
                Content="&#x232B;"
                Style="{StaticResource ControlButtonStyle}" />
            <Button
                x:Name="DivideButton"
                Grid.Row="0"
                Grid.Column="3"
                Click="OperationButton_Click"
                Content="/"
                Style="{StaticResource ControlButtonStyle}" />

            <Button
                x:Name="SevenButton"
                Grid.Row="1"
                Grid.Column="0"
                Click="DigitOrDotButton_Click"
                Content="7"
                Style="{StaticResource ControlButtonStyle}" />
            <Button
                x:Name="EightButton"
                Grid.Row="1"
                Grid.Column="1"
                Click="DigitOrDotButton_Click"
                Content="8"
                Style="{StaticResource ControlButtonStyle}" />
            <Button
                x:Name="NineButton"
                Grid.Row="1"
                Grid.Column="2"
                Click="DigitOrDotButton_Click"
                Content="9"
                Style="{StaticResource ControlButtonStyle}" />
            <Button
                x:Name="MultiplyButton"
                Grid.Row="1"
                Grid.Column="3"
                Click="OperationButton_Click"
                Content="*"
                Style="{StaticResource ControlButtonStyle}" />

            <Button
                x:Name="FourButton"
                Grid.Row="2"
                Grid.Column="0"
                Click="DigitOrDotButton_Click"
                Content="4"
                Style="{StaticResource ControlButtonStyle}" />
            <Button
                x:Name="FiveButton"
                Grid.Row="2"
                Grid.Column="1"
                Click="DigitOrDotButton_Click"
                Content="5"
                Style="{StaticResource ControlButtonStyle}" />
            <Button
                x:Name="SixButton"
                Grid.Row="2"
                Grid.Column="2"
                Click="DigitOrDotButton_Click"
                Content="6"
                Style="{StaticResource ControlButtonStyle}" />
            <Button
                x:Name="SubtractButton"
                Grid.Row="2"
                Grid.Column="3"
                Click="OperationButton_Click"
                Content="-"
                Style="{StaticResource ControlButtonStyle}" />

            <Button
                x:Name="OneButton"
                Grid.Row="3"
                Grid.Column="0"
                Click="DigitOrDotButton_Click"
                Content="1"
                Style="{StaticResource ControlButtonStyle}" />
            <Button
                x:Name="TwoButton"
                Grid.Row="3"
                Grid.Column="1"
                Click="DigitOrDotButton_Click"
                Content="2"
                Style="{StaticResource ControlButtonStyle}" />
            <Button
                x:Name="ThreeButton"
                Grid.Row="3"
                Grid.Column="2"
                Click="DigitOrDotButton_Click"
                Content="3"
                Style="{StaticResource ControlButtonStyle}" />
            <Button
                x:Name="AddButton"
                Grid.Row="3"
                Grid.Column="3"
                Click="OperationButton_Click"
                Content="+"
                Style="{StaticResource ControlButtonStyle}" />

            <Button
                x:Name="DecimalButton"
                Grid.Row="4"
                Grid.Column="0"
                Click="DigitOrDotButton_Click"
                Content="."
                Style="{StaticResource ControlButtonStyle}" />
            <Button
                x:Name="ZeroButton"
                Grid.Row="4"
                Grid.Column="1"
                Click="DigitOrDotButton_Click"
                Content="0"
                Style="{StaticResource ControlButtonStyle}" />
            <Button
                x:Name="EqualsButton"
                Grid.Row="4"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                Click="EqualsButton_Click"
                Content="="
                Style="{StaticResource ControlButtonStyle}" />

        </Grid>

    </Grid>
</Window>
